<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="master" template="/WEB-INF/jsp/layout/master.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/commons/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/commons/footer.jsp" />
        <put-attribute name="head" value="/WEB-INF/jsp/commons/head.jsp" />
    </definition>

    <definition name="index" extends="master">
        <put-attribute name="title" value="Home page" />
        <put-attribute name="body" value="/WEB-INF/jsp/views/index.jsp" />
        <put-attribute name="current" value="index" cascade="true" />
    </definition>

    <definition name="login" extends="master">
        <put-attribute name="title" value="Login page" />
        <put-attribute name="body" value="/WEB-INF/jsp/views/login.jsp" />
        <put-attribute name="current" value="login" cascade="true" />
    </definition>

    <definition name="users" extends="master">
        <put-attribute name="title" value="Users page" />
        <put-attribute name="body" value="/WEB-INF/jsp/views/user.jsp" />
        <put-attribute name="current" value="users" cascade="true" />
    </definition>

    <definition name="register" extends="master">
        <put-attribute name="title" value="Register page" />
        <put-attribute name="body" value="/WEB-INF/jsp/views/register.jsp" />
        <put-attribute name="current" value="register" cascade="true" />
    </definition>

    <definition name="user-detail" extends="master">
        <put-attribute name="title" value="Detail page" />
        <put-attribute name="body" value="/WEB-INF/jsp/views/user-detail.jsp" />
        <put-attribute name="current" value="users" cascade="true" />
    </definition>

    <definition name="roles" extends="master">
        <put-attribute name="title" value="Roles page" />
        <put-attribute name="body" value="/WEB-INF/jsp/views/roles.jsp" />
        <put-attribute name="current" value="roles" cascade="true" />
    </definition>

</tiles-definitions>